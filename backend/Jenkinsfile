pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Baribrahim/OneSky.git'
      }
    }

    stage('Install') {
      steps {
        // go straight into the real backend code
        dir('backend/functionality') {
          sh '''
            python3 -m venv venv
            . venv/bin/activate
            pip install --upgrade pip
            pip install -r requirements.txt
          '''
        }
      }
    }

    stage('Test') {
      steps {
        dir('backend/functionality') {
          withCredentials([string(credentialsId: 'team1-backend-env', variable: 'OPENAI_API_KEY')]) {
            sh '''
              # activate the existing venv
              . venv/bin/activate

              # create a temporary .env for the tests
              cat > .env <<EOF
$OPENAI_API_KEY
EOF

              # run tests
              pytest --maxfail=1 --disable-warnings -q

              # cleanup: remove the secret file after tests
              rm -f .env
            '''
          }
        }
      }
    }

    stage('SonarQube Analysis') {
      environment {
        scannerHome = tool 'sonarqube'
      }
      steps {
        withSonarQubeEnv('sonar-qube-1') {
          // sonar-project.properties is in backend/, so run from there
          dir('backend') {
            sh "${scannerHome}/bin/sonar-scanner"
          }
        }

        timeout(time: 10, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }

  }
}
