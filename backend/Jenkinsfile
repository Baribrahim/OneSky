pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        // repo root -> will contain backend/ and frontend/
        git branch: 'main', url: 'https://github.com/Baribrahim/OneSky.git'
      }
    }

    stage('Install') {
      steps {
        // your real code lives here
        dir('backend/functionality') {
          sh '''
            python3 -m venv venv
            . venv/bin/activate
            pip install --upgrade pip
            pip install -r requirements.txt
          '''
        }
      }
    }

    stage('Test') {
      steps {
        dir('backend/functionality') {
          // pull ALL envs from Jenkins as ONE secret text
          // but only export what we need right now
          withCredentials([string(credentialsId: 'team1-backend-env', variable: 'ENV_VARS')]) {
            sh '''
              # be extra safe: donâ€™t print commands with values
              set +x

              # write the whole secret block to .env (not printed)
              printf "%s\n" "$ENV_VARS" > .env

              # extract ONLY the key we actually need for tests
              OPENAI_API_KEY=$(grep '^OPENAI_API_KEY=' .env | cut -d= -f2-)
              export OPENAI_API_KEY

              # now run tests
              . venv/bin/activate
              pytest --maxfail=1 --disable-warnings -q
            '''
          }
        }
      }
    }

    stage('SonarQube Analysis') {
      environment {
        scannerHome = tool 'sonarqube'
      }
      steps {
        withSonarQubeEnv('sonar-qube-1') {
          // sonar-project.properties is in backend/
          dir('backend') {
            sh "${scannerHome}/bin/sonar-scanner"
          }
        }

        timeout(time: 10, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }

  }
}
