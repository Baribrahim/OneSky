// This Jenkins pipeline adds install and test stages before static code analysis (SonarQube)

pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        // Get source code from a GitHub repository
        git branch: 'main', url: 'https://github.com/Baribrahim/OneSky.git'
      }
    }

    stage('Install') {
      steps {
        dir('backend') {
          sh '''
            # Install system dependencies required for mysqlclient and wheel builds
            sudo apt-get update -y
            sudo apt-get install -y python3-dev pkg-config default-libmysqlclient-dev build-essential
            
            # (Optional) virtual environment and pip install
            python3 -m venv venv
            . venv/bin/activate
            pip3 install -r requirements.txt
          '''
        }
      }
    }

    stage('Test') {
      steps {
        // Run the Python tests using pytest inside the virtual environment
        dir('backend/functionality') {
          sh '''
            . venv/bin/activate
            pytest --maxfail=1 --disable-warnings -q
          '''
        }
      }
    }

    stage('SonarQube Analysis') {
      environment {
        scannerHome = tool 'sonarqube'
      }
      steps {
        withSonarQubeEnv('sonar-qube-1') {
          dir('backend') {
            sh "${scannerHome}/bin/sonar-scanner"
          }
        }

        timeout(time: 10, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }

  } // end of stages
}
