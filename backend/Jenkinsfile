pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'X'
      }
    }

    stage('Install') {
      steps {
        dir('backend/functionality') {
          sh '''
            python3 -m venv venv
            . venv/bin/activate
            pip install --upgrade pip
            pip install -r requirements.txt
          '''
        }
      }
    }

    stage('Test') {
      steps {
        dir('backend/functionality') {
          withCredentials([string(credentialsId: 'team1-backend-env', variable: 'OPENAI_API_KEY')]) {
            sh '''
              # activate existing venv
              . venv/bin/activate

              # turn off shell echo for sensitive operations
              set +x

              # write the env file in Python so the secret never appears in the shell script
              python3 - << 'PY'
import os
from pathlib import Path

secret = os.environ.get("OPENAI_API_KEY", "")
Path(".env").write_text(secret)
PY

              # turn echo back on if you want (optional)
              set -x

              # run tests
              pytest --maxfail=1 --disable-warnings -q

              # cleanup
              rm -f .env
            '''
          }
        }
      }
    }

    stage('SonarQube Analysis') {
      environment {
        scannerHome = tool 'sonarqube'
      }
      steps {
        withSonarQubeEnv('sonar-qube-1') {
          dir('backend') {
            sh "${scannerHome}/bin/sonar-scanner"
          }
        }

        timeout(time: 10, unit: 'MINUTES') {
          waitForQualityGate abortPipeline: true
        }
      }
    }

  }
}
